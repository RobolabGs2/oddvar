{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "downlevelIteration": true,
        "lib": [
            "dom",
            "es6",
            "scripthost",
            "es2015.collection"
        ],
        "baseUrl": "./",
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}